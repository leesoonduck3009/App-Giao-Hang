<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.OrderFragment"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primary_color"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/rcvOrder">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:layout_constraintTop_toBottomOf="@id/layoutTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:elevation="0dp"
        android:id="@+id/navOrder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_shape_bottom_border"
        android:paddingBottom="5dp"
        android:elevation="0dp"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:itemTextColor="@drawable/bottom_navigation_selector"
        app:itemTextAppearanceActive= "@style/SellNavigationTextAppearance"
        app:itemTextAppearanceInactive="@style/SellNavigationTextAppearance"
        app:menu="@menu/order_menu"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/frameLayoutOrder"
        app:layout_constraintTop_toBottomOf="@id/navOrder"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>

